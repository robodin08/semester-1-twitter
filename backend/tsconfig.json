{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "dist", // compiled JS output
        "rootDir": "src", // source folder
        "esModuleInterop": true, // allow import of CommonJS modules
        "rewriteRelativeImportExtensions": true, // rewrites .ts -> .js in dist
        "forceConsistentCasingInFileNames": true,
        // "sourceMap": true,
        "strict": true, // strict type checking
        "noEmitOnError": true,
        "isolatedModules": true,
        "removeComments": true,
        "importHelpers": true,
        "verbatimModuleSyntax": true, // keep TS import/export syntax
        "experimentalDecorators": true, // required by TypeORM
        "emitDecoratorMetadata": true, // required by TypeORM
        "baseUrl": "src",
        "paths": {
            "@entities/*": [
                "database/entities/*.ts"
            ],
            "@middleware/*": [
                "middleware/*.ts"
            ],
            "@routes/*": [
                "routes/*.ts"
            ],
            "@services/*": [
                "services/*.ts"
            ],
            "@utils/*": [
                "utils/*.ts"
            ],
            "@datasource": [
                "database/datasource.ts"
            ],
            "@config": [
                "config.ts"
            ],
            "@RequestError": [
                "utils/RequestError.ts"
            ],
            "@/*": [
                "*.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}